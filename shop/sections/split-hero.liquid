{%- comment -%} Layout {%- endcomment -%}
{%- assign contentAlignment = section.settings.content_alignment -%}
{%- assign contentWidth = section.settings.content_width -%}
{%- assign mobileLayout = section.settings.mobile_layout -%}

{%- comment -%} Colors {%- endcomment -%}
{%- unless section.settings.overlay_color == blank -%}
	{%- assign overlayColor = section.settings.overlay_color  -%}
{%- else -%}
	{%- assign overlayColor = 'none' -%}
{%- endunless -%}
{%- assign overlayOpacity = section.settings.overlay_opacity | prepend: '.' -%}

{%- assign colorStyle = section.settings.color_style -%}

{%- assign buttonPrimaryStyle = section.settings.button_primary_style -%}
{%- assign buttonSecondaryStyle = section.settings.button_secondary_style -%}

{%- comment -%} Typography {%- endcomment -%}
{%- assign headingSize = section.settings.heading_size -%}
{%- assign textSize = section.settings.text_size -%}

{%- comment -%} Content {%- endcomment -%}
{%- assign heading = section.settings.title  -%}
{%- assign subheading = section.settings.subheading  -%}
{%- assign text = section.settings.text -%}
{%- assign cta = section.settings.cta -%}
{%- assign link = section.settings.link -%}
{%- assign cta_2 = section.settings.cta_2 -%}
{%- assign link_2 = section.settings.link_2 -%}

<section data-section-type="split-hero" data-section-id="{{ section.id }}">
	<div class="split-hero {{ section.settings.image_height }}" data-style="{{ colorStyle }}" data-mobile="{{ mobileLayout }}">
		<div class="split-hero__half split-hero__half--left">
			{%- assign image = section.settings.image_desktop_left -%}
			{%- assign image_mobile = section.settings.image_mobile_left -%}
			{%- assign image_position = section.settings.image_left_position -%}

			<div class="split-hero__box {% if image_mobile != blank %}split-hero__box--has-mobile{% endif %}">
				{%- unless image == blank -%}
					<div class="split-hero__image split-hero__image--desktop split-hero__image--{{ image_position }} lazyload fade-in"
						data-bgset="{% include 'bgset', image %}"
						data-sizes="auto"
						data-parent-fit="cover"
					>
					</div>
					<noscript>
						<div class="split-hero__image split-hero__image--desktop split-hero__image--{{ image_position }}"
						style="background-image:url('{{ image | img_url: '2048x' }}');"
						></div>
					</noscript>
				{%- else -%}
					<div class="split-hero__image split-hero__image--desktop split-hero__image--onboarding">
						{{- 'image' | placeholder_svg_tag: 'placeholder-svg' -}}
					</div>
				{%- endunless -%}

				{%- unless image_mobile == blank -%}
					{%- assign image = image_mobile -%}
					<div class="split-hero__image split-hero__image--mobile split-hero__image--{{ image_position }} lazyload fade-in"
						data-bgset="{% include 'bgset', image %}"
						data-sizes="auto"
						data-parent-fit="cover"
					>
					</div>
					<noscript>
						<div class="split-hero__image split-hero__image--mobile split-hero__image--{{ image_position }}"
						style="background-image:url('{{ image | img_url: '2048x' }}');"
						></div>
					</noscript>
				{%- endunless -%}
			</div>
		</div>
		<div class="split-hero__half split-hero__half--right">
			{%- assign image = section.settings.image_desktop_right -%}
			{%- assign image_mobile = section.settings.image_mobile_right -%}
			{%- assign image_position = section.settings.image_right_position -%}

			<div class="split-hero__box {% if image_mobile != blank %}split-hero__box--has-mobile{% endif %}">
				{%- unless image == blank -%}
					<div class="split-hero__image split-hero__image--desktop split-hero__image--{{ image_position }} lazyload fade-in"
						data-bgset="{% include 'bgset', image %}"
						data-sizes="auto"
						data-parent-fit="cover"
					>
					</div>
					<noscript>
						<div class="split-hero__image split-hero__image--desktop split-hero__image--{{ image_position }}"
						style="background-image:url('{{ image | img_url: '2048x' }}');"
						></div>
					</noscript>
				{%- else -%}
					<div class="split-hero__image split-hero__image--desktop split-hero__image--onboarding">
						{{- 'image' | placeholder_svg_tag: 'placeholder-svg' -}}
					</div>
				{%- endunless -%}

				{%- unless image_mobile == blank -%}
					{%- assign image = image_mobile -%}
					<div class="split-hero__image split-hero__image--mobile split-hero__image--{{ image_position }} lazyload fade-in"
						data-bgset="{% include 'bgset', image %}"
						data-sizes="auto"
						data-parent-fit="cover"
					>
					</div>
					<noscript>
						<div class="split-hero__image split-hero__image--mobile split-hero__image--{{ image_position }}"
						style="background-image:url('{{ image | img_url: '2048x' }}');"
						></div>
					</noscript>
				{%- endunless -%}
			</div>
		</div>
		
		<div class="split-hero__overlay" data-overlay-opacity="{{ overlayOpacity }}" style="background-color: {{ overlayColor }}; opacity: {{ overlayOpacity }};"></div>
		<div class="split-hero__content split-hero__content--{{ contentAlignment }}">
			<div class="container">
				<div class="row">
					<div class="split-hero__text split-hero__text--{{ contentWidth }}">
						{%- if subheading != blank -%}
							<div class="split-hero__subheading subheading-text">{{ subheading }}</div>
						{%- endif -%}

						{%- if heading != blank -%}
							<h2 class="split-hero__heading size--{{ headingSize }}">{{ heading }}</h2>
						{%- endif -%}

						{%- if text != blank -%}
							<div class="split-hero__richtext size--{{ textSize }}">{{ text }}</div>
						{%- endif -%}

						{%- if cta != blank -%}
							<a tabindex="0" {% if link != blank %}href="{{ link }}"{% endif %} class="button button--{{ section.settings.button_size }} button--{{ buttonPrimaryStyle }}" aria-label="{{ cta }}" title="{{ cta }}">{{ cta }}</a>
						{%- endif -%}

						{%- if cta_2 != blank -%}
							<a tabindex="0" {% if link_2 != blank %}href="{{ link_2 }}"{% endif %} class="button button--{{ section.settings.button_size }} button--{{ buttonSecondaryStyle }}" aria-label="{{ cta_2 }}" title="{{ cta_2 }}">{{ cta_2 }}</a>
						{%- endif -%}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

