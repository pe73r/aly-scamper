{% comment %} Settings {% endcomment %}
{%- assign show_page_title = section.settings.show_page_title -%}
{%- assign banner = section.settings.banner -%}

{%- assign contact_heading = page.title -%}
{%- assign contact_content = page.content -%}

{%- unless section.settings.show_page_title -%}
	{%- assign contact_heading = '' -%}
{%- endunless -%}

{%- include 'contact-section' -%}

