{% comment %} Settings {% endcomment %}
{%- assign subheading = section.settings.subheading -%}
{%- assign heading = section.settings.title -%}
{%- assign html = section.settings.html -%}

<section class="custom-html-section" data-section-id="{{ section.id }}" data-section-type="custom-html">
   {%- unless heading == blank and subheading == blank -%}
    <div class="page-title">
      <div class="container">
        <div class="row">
          {%- if subheading != blank -%}
            <h4 class="page-title__subheading subheading-text">{{ subheading }}</h4>
          {%- endif -%}

          {%- if heading != blank -%}
            <h2 class="page-title__heading">{{ heading }}</h2>
          {%- endif -%}
        </div>
      </div>
    </div>
  {% endunless %}

  <div class="custom-html">
    <div class="container">
      <div class="row">
        {%- if html -%}
          <div class="custom-html__code">
            {{ html }}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom HTML",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subeading",
      "default": "Custom content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "HTML code"
    },
    {
      "type": "html",
      "id": "html",
      "label": "Custom HTML",
      "default": "<p>Once you write some HTML, it will render right here.</p>"
    }
  ],
  "presets": [
    {
      "category": "Advanced",
      "name": "Custom HTML"
    }
  ]
}
{% endschema %}